<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".frame.AdminLogin" >
    <ImageView
        android:id="@+id/image_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_pwd"
        android:layout_alignRight="@+id/image_account"
        android:src="@drawable/pwd" />
    <ImageView
        android:id="@+id/image_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_account"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="44dp"
        android:src="@drawable/account" />
    <EditText
        android:id="@+id/login_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_pwd"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="请输入账号"
        android:text="uu_admin" >
        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/login_action"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="222dp"
        android:text="登  录" />
    <EditText
        android:id="@+id/login_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_action"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:text="admin@abc" />

</RelativeLayout>