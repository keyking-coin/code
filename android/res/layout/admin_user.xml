<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".frame.AdminUser" >
    <LinearLayout
        android:id="@+id/userLayout2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="71dp"
        android:orientation="vertical" >
        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:background="#FF909090" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userLayout3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp" >
        <Button
            android:id="@+id/button_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff0000"
            android:text="会 员" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userLayout1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp" >
        <Button
            android:id="@+id/button_agency"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="中 介" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="350dp" >
        <Button
            android:id="@+id/button_deal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="帖 子" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/userLayout2" >
        <SearchView
            android:id="@+id/searchView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </SearchView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userLayout5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userLayout4"
        android:layout_alignLeft="@+id/userLayout3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="110dp" >
        <Spinner
            android:id="@+id/spinner_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userLayout6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userLayout5"
        android:layout_below="@+id/userLayout5"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >
        <EditText
            android:id="@+id/editText_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:hint="用户头衔" >
            <requestFocus />
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userLayout7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userLayout6"
        android:layout_below="@+id/userLayout6"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical" >
        <Spinner
            android:id="@+id/spinner_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/userLayout8"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userLayout7"
        android:layout_below="@+id/userLayout7"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
        <EditText
            android:id="@+id/editText_nike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="12" >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userLayout9"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userLayout8"
        android:layout_below="@+id/userLayout8"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >
        <Button
            android:id="@+id/button_user_update"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="修    改" />
    </LinearLayout>
</RelativeLayout>